<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonGeneralStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ButtonStyle" parent="ButtonGeneralStyle">
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="keyboardGeneralStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36dp</item>
    </style>

    <style name="keyboardNineStyle" parent="keyboardGeneralStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/select_keyboard</item>
    </style>

    <style name="keyboardMiniStyle" parent="keyboardGeneralStyle">
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/select_keyboard</item>
    </style>

</resources>
